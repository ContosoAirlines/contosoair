<section class="block-booking">
  <div class="container">
    <a class="redefine-search" href="/book">
      Shop for another flight <span class="icon icon-arrow-right"></span>
    </a>
    <hr>
    <h1 class="block-booking-title">Flight booked!</h1>
    <div class="cities--indicator text-center">
      <div class="d-flex">
        <div class="cell">{{fromCity}}</div>
        <div class="cell"></div>
        <div class="cell">{{toCity}}</div>
      </div>
      <div class="d-flex">
        <div class="cell cell--letters">{{fromCode}}</div>
        <div class="cell"><span class="cities--indicator--line"></span></div>
        <div class="cell cell--letters">{{toCode}}</div>
      </div>
    </div>
    <div class="receipt-summary">
      <h2 class="block-booking-title2">Your receipt has been sent to you via email.</h2>
      <p>Please note that this is not a boarding pass.</p>
      <p>You may check in for your flight up to 24 hours in advance of your departure.</p>
    </div>
    <span>
      <h3 class="block-booking-title3">Passenger Name</h3>
      <p class="block-booking-passenger">{{name}}</p>
    </span>

    <div class="row">
      <div class="col-12 col-md-10">
        {{> purchase/summary summary}}
      </div>
      <div class="col-12 col-md-2 mt-5">
        {{> purchase/totalPrice totals}}
      </div>
      <span class="col-12 mt-3">
        <hr class="block-booking-underline">
      </span>
    </div>
  </div>
</section> 